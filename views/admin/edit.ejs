<%- include('partials/header') -%>



        <section id="compose">
                <h1 id="pageHeading">COMPOSE</h1>
                <div id="formContainer">
                        <form>
                                <label for="department"><span class="departmentLable">Department: </span></label>
                                <select id="department" name="department" >
                                        <option value="">Choose</option>
                                        <option value="Biotechnology">Biotechnology</option>
                                        <option value="Physics">Physics</option>
                                        <option value="Cybersecurity">Cybersecurity</option>
                                        <option value="Computer-science">Computer Science</option>
                                        <option value="Chemistry">Chemistry</option>
                                        <option value="Mathematics">Mathematics</option>
                                </select>
                                <br>
                                <br>
                                <label for="year"><span class="departmentLable">Year: </span></label>
                                <select id="year" name="year">
                                        <option value="">Choose</option>
                                        <option value="first-year">First-year</option>
                                        <option value="second-year">Second-year</option>
                                        <option value="third-year">Third-year</option>
                                </select>
                                <br>
                                <br>
                                <label for="title"><span id="title">Title: </label>
                                <input type="text" name="title" id="title" placeholder="Practical Title" value="<%= title %> ">
                                <br><br>
                                <label for="discreption">Practical Description</label>
                                <textarea name="discreption" id="discreption" cols="30" rows="10"
                                        placeholder="Practical Discreption"><%= discreption %> </textarea>
                                <input type="text" name="practical_Id" value="<%=id%>" style="display: none;">
                        </form>
                </div>

                <br>

                <!-- QUILL -->
                <div id="editor">
                        
                </div>
                <button type="submit" id="saveDelta">Update</button>
                
        </section>

        <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="/js/edit.js"></script>
